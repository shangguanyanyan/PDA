<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
<!-- lfmenu -->

    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <!-- lfmenu -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <style name="shapedEditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/shap_edittext_selector</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">?android:attr/editTextColor</item>
        <item name="android:gravity">center_vertical</item>
    </style>

   <!-- <style name="NoTheme" parent="android:Theme.NoDisplay"></style>-->
    <!-- SearchItemActivity used (start) -->
    <style name="NoActionBar" parent="android:Theme.Holo.Light.NoActionBar"></style>

    <style name="ThemeTranslucent" parent="android:Theme.Translucent.NoTitleBar"></style>

    <style name="Transparent">
        <item name="android:windowBackground">@drawable/near000</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>-->
    </style>
    <!-- (end) -->
    <!-- 弹出setting style -->
    <style name="pop_text_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ExpandableItemStyle">
        <item name="android:layout_height">@dimen/item_size</item>
        <item name="android:layout_width">@dimen/item_size</item>
        <item name="android:background">@drawable/bg_item_with_title</item>
        <item name="android:layout_margin">@dimen/item_margin</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>

    <style name="ExpandableItemStyleHeader">
        <item name="android:layout_height">@dimen/item_size</item>
        <item name="android:layout_width">@dimen/item_size</item>
        <item name="android:layout_margin">@dimen/item_margin</item>
        <item name="android:textSize">@dimen/item_text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:background">@drawable/item_brown</item>
    </style>

</resources>