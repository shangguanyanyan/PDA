<?xml version="1.0" encoding="utf-8"?>
<!-- activity_frame_billdocument.xml 单据查看编辑公共界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandable_selector="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--  -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingBottom="2dp" >

        <TextView
            android:id="@+id/billdocument_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/conrtolscan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/billdocument_title" >

            <com.jxjr.v.view.MEditText
                android:id="@+id/billdocument_scanview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/billdocument_title"
                android:layout_weight="5"
                android:background="@drawable/shap_edittext_selector"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:minHeight="20dp"
                android:focusable="true"
                android:selectAllOnFocus="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />

          <!--   <ImageButton
                android:id="@+id/scanpic"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_weight="0.78"
                android:background="#000000"
                android:src="@drawable/addition" /> -->

            <com.karumi.expandableselector.ExpandableSelector
                android:id="@+id/es_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/expandable_selector_margin"
                android:background="@drawable/bg_expandable_selector_dark"
                expandable_selector:animation_duration="@integer/custom_animation_duration"
                expandable_selector:collapse_interpolator="@android:anim/decelerate_interpolator"
                expandable_selector:container_interpolator="@android:anim/accelerate_decelerate_interpolator"
                expandable_selector:expand_interpolator="@android:anim/accelerate_interpolator" >
            </com.karumi.expandableselector.ExpandableSelector>

            <CheckBox
                android:id="@+id/isoffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/es_icons"
                android:text="离线"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_viewpage_bg_black" >

        <Button
            android:id="@+id/billdocument_viewer_hd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/selector_pagerview_btn"
            android:text="单据"
            android:textColor="@drawable/pageViewBtn_textColor" />

        <Button
            android:id="@+id/billdocument_viewer_summary"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/selector_pagerview_btn"
            android:text="员工"
            android:textColor="@drawable/pageViewBtn_textColor" />

        <Button
            android:id="@+id/billdocument_viewer_entList"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/selector_pagerview_btn"
            android:text="明细"
            android:textColor="@drawable/pageViewBtn_textColor" />

        <Button
            android:id="@+id/billdocument_viewer_scan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/selector_pagerview_btn"
            android:text="条码"
            android:textColor="@drawable/pageViewBtn_textColor" />

        <Button
            android:id="@+id/billdocument_viewer_cache"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/selector_pagerview_btn"
            android:text="离线"
            android:textColor="@drawable/pageViewBtn_textColor" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/billdocument_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>