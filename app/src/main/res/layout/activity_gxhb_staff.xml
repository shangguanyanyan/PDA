<?xml version="1.0" encoding="utf-8"?>
<!-- activity_mat_inquire.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
    style="@style/AppTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    layout="@layout/frame_entry_topbar2" />
    
   <LinearLayout
        android:id="@+id/etydetail_bodylinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/number_scan_页上边距" >
       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/number_scan_行距离" >

            <TextView
                android:id="@+id/staff_bz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班     组:"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            
            <EditText
	                    android:id="@+id/scan_bz"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_weight="1"
	                    android:background="@drawable/shap_edittext_selector"
	                    android:inputType="text"
	                    android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/number_scan_行距离" >

            <TextView
                android:id="@+id/entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="员工信息"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        
        <ListView
        android:id="@+id/ygentry_listview" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="2dp"
        android:choiceMode="singleChoice"         />

</LinearLayout>
</LinearLayout>